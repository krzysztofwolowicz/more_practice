<div class="hero-unit">
  <h1>Edycja strony: <%= @strona.nazwa %></h1>


  <%= form_for(:strona, :url => {:action =>'aktualizuj', :id=> @strona.id, :kategoria_id => @kategorie.id}) do |pole| %>

  <%= render(:partial => "form", :locals => {:pole => pole}) %>
  <div style="text-align: center;">
    <%= link_to("Anuluj", {:action=>'index', :kategoria_id => @kategorie.id}, :class=>'btn btn-warning') %>
    <%= submit_tag "Aktualizuj", :class=>'btn btn-primary' %>
  </div>

  <% end %>

</div>


