<% @tytul_strony = @galeria.nazwa %>
<div class="container">
  <h2><%= @galeria.nazwa %></h2>
  <div class="row">
    <div class="col-md-8">
      <%= @galeria.opis %>
      <hr>
      <p><%= link_to("<< wstecz", {:controller => 'public', :action => 'index'}, :class => 'btn btn-default')%></p>
  </div>
  <div class="col-md-4">
    <%= image_tag(@galeria.zdjecie.url, :class => "featurette-image img-circle img-responsive")%>
  </div>
  </div>
  <hr>
</div>

<div class="container">

    <div class="row">
      <% @galeria.zdjecies.each do |zdjecie| %>
        <div class="col-xs-6 col-md-4">
          <a class="example-image-link" href="<%= zdjecie.zdjecie.url %>" data-lightbox="example-set" title="<%= zdjecie.opis %>">
          <%= image_tag(zdjecie.zdjecie.url(:thumb), :class => "img-circle") %>
         </a>
        <br>
        <%= zdjecie.nazwa %>
      </div>
     <% end %>
    </div>

</div>
