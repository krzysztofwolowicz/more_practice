<div class="hero-unit">
<h1>Użytkownicy</h1>
<%= link_to("Dodaj noweg użytkownika", {:action=>'nowy'}, :class=>'btn btn-mini btn-primary')  %>

  <p style="text-align: right;"> Ilość użytkowników:  <%= @uzytkownik.size %></p>

  <table class="table table-striped">
    <tr class="info">
      <th>Użytkownik</th>
      <th>Imię i nazwisko</th>
      <th>Email</th>
      <th>Akcja</th>
    </tr>

<% @uzytkownik.each do |uzytkownik| %>

    <tr>
      <td><%= uzytkownik.uzytkownik %></td>
      <td><%= uzytkownik.imie + " " + uzytkownik.nazwisko %></td>
      <td><%= mail_to(uzytkownik.email) %></td>
      <td class="actions">
        <%= link_to("Edycja", {:action=>'edycja', :id=> uzytkownik.id},:class=>'btn btn-xs btn-primary')%>
        <%= link_to("Usun", {:action=>'usun', :id=> uzytkownik.id}, :class=>'btn btn-xs btn-danger')%>
      </td>
    </tr>

<% end %>

</table>
</div>

