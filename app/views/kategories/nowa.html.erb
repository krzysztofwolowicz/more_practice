<h1>Nowa Kategoria</h1>
<%= link_to("powrót", {:action=>'index'}) %>

<%= form_for(:kategoria, :url => {:action =>'utworz'}) do |pole| %>

<table>
  <tr>
    <th><%= pole.label(:nazwa) %></th>
    <td><%= pole.text_field(:nazwa) %></td>
  </tr>
  <tr>
    <th><%= pole.label(:pozycja) %></th>
    <td><%= pole.select(:pozycja, 1..@licznik) %></td>
  </tr>
  <tr>
    <th><%= pole.label(:widoczna, "Czy jest wpidoczna?") %></th>
    <td><%= pole.check_box(:widoczna) %></td>
  </tr>
</table>
<div>
  <%= submit_tag "Utwórz", class: "class" %>
</div>

<% end %>

